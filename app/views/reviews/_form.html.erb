<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-inputs">
  <%= f.input :content, placeholder: "be creative, be inspired , be high" %>
  <%= f.input :rating, placeholder: "Add a rating (1-5)" %>
  <%= f.submit "Add a review", class: "btn btn-primary" %>
    <%= f.submit "Add", class: "btn btn-secondary" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
